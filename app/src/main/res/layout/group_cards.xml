<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@drawable/inputlines5"
        android:padding="10dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/cards"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/user"
            app:civ_border_color="@color/white"
            app:civ_border_width="3dp" />


        <Button
            android:id="@+id/requestBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@id/cards"
            android:background="@drawable/inputlines4"
            android:drawableTop="@drawable/ic_baseline_cancel_24"
            android:paddingTop="3dp" />



        <Button
            android:id="@+id/requestBtn2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/cards"
            android:layout_marginStart="10dp"
            android:visibility="invisible"
            android:layout_marginTop="50dp"
            android:background="@drawable/inputlines6"
            android:padding="13.5dp"
            android:drawableTop="@drawable/ic_baseline_near_me_24" />




        <TextView
            android:id="@+id/groupName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cards"
            android:layout_marginTop="10dp"
            android:text="test"
            android:textColor="@color/dark_text"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/liquidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:textColor="@color/purple_700"
            android:text="test"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/liquidity"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:textColor="@color/green"
            android:text="test"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/loss"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profit"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:text="test"
            android:textColor="@color/red"
            android:textSize="12sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/members"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/loss"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:textColor="@color/dark_text"
            android:textSize="12sp"
            android:text="test"
            android:textStyle="bold" />


</RelativeLayout>

    </RelativeLayout>