<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">



    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/inputlines5"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/inputlines6"
            android:drawableStart="@drawable/ic_baseline_games"
            android:paddingLeft="8dp" />


        <RelativeLayout
            android:id="@+id/cardsHold"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/cards"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/user"
                app:civ_border_color="@color/white"
                app:civ_border_width="3dp" />


            <Button
                android:id="@+id/requestBtn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/cards"
                android:background="@drawable/inputlines4"
                android:drawableTop="@drawable/ic_baseline_cancel_24"
                android:paddingTop="3dp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cardsHold"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp">


            <TextView
                android:id="@+id/groupName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Two"
                android:textColor="@color/dark_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/liquidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/groupName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Last"
                android:textColor="@color/purple_700"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/liquidity"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="2000"
                android:textColor="@color/green"
                android:textSize="15sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profit"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="2000"
                android:textColor="@color/red"
                android:textSize="12sp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/members"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/loss"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:textColor="@color/dark_text"
                android:textSize="12sp"
                android:textStyle="bold" />

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>